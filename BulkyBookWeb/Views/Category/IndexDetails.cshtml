@model IEnumerable<Category>

@{
    ViewData["Title"] = "IndexDetails";
}
<div>
<h1 style="display:inline;margin-right:300px">Category List</h1>
    <a style="color:white;text-decoration:none;" asp-area="" asp-controller="Category" asp-action="Create"><b><i class="bi bi-plus"></i>Create new element</b></a>
</div>
@if (TempData["suc"]!=null)
{ 
    <script  src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>;
    <script type="text/javascript">
        toastr.success('@TempData["suc"]');
        </script>
}


<table  class="table table-striped table-bordered" border="1" width="100%">
    <thead >
        <tr >
            <th >
                Name
            </th>
 
            <th>
                Display Order

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach(var i in Model)
        {
            <tr>
                <td>
                    @i.Name
                </td>
                 <td>
                    @i.DisplayOrder
                </td>
                <td>
                    <a asp-controller="category" asp-action="Edit" asp-route-id="@i.Id" class="btn btn-primary"><i class="bi bi-pencil-square" ></i> Edit</a>
                </td>
                <td>
                    <a asp-controller="category" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Delete</a>
                </td>

                <td>

                </td>
            </tr>
        }
    </tbody>
</table>