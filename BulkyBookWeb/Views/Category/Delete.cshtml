@model BulkyBookWeb.Models.Category

<form method="post" asp-action="Delete">
    <input asp-for="Id"  />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-bg-primary">Delete Category</h2>

        </div>
       <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name"  class="form-control" />
            @*<span asp-validation-for="Name" class="text-primary"></span>*@
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder"  class="form-control" />
            @*<span asp-validation-for="DisplayOrder"></span>*@
        </div>
        <button type="submit">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="width:150px">Back to index</a>

    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
